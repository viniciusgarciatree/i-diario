<% @daily_frequencies.each do |resource| %>
  <div class="widget-body">
    <% if resource.all_audits.exists? %>
      <div class="table-responsive">
        <table class="table table-bordered table-only-inner-bordered" id="history">
          <thead>
            <tr>
              <th>Ação</th>
              <th>Alterações</th>
              <th>Autor</th>
              <th>Data</th>
            </tr>
          </thead>
          <tbody>
            <% resource.all_audits.each do |audit| %>
              <% decoratorated_audit = AuditDecorator.new(audit) %>
              <% next unless decoratorated_audit.auditable.try(:student) %>
              <%= render 'daily_frequencies/history/history', record: decoratorated_audit %>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="alert alert-warning alert-dismissable">
        Nenhuma alteração realizada.
      </div>
    <% end %>
  </div>
<% end %>
