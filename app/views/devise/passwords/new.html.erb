<%= content_for :recaptcha_js do %>
  <%= include_recaptcha_js %>
<% end %>

<div class="well no-padding">
	<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "smart-form client-form"  }) do |f| %>

	  <header> Esqueceu sua senha? </header>

	  <fieldset>
	  	<section>
		  	<%= f.label :email, class: "label" %>
        <label class="input">
          <i class="icon-append fa fa-envelope"></i>
          <%= f.input_field :email, required: false, autofocus: true %>
        </label>

			  <div class="note">
          <%= render "devise/shared/links" %>
        </div>
		  </section>
		</fieldset>
		<footer>
			<%= button_tag( :class => "btn btn-portabilis") do %>
			 	<i class='fa fa-refresh'></i> Enviar instruções
			<% end %>
      <%= recaptcha_execute %>
		</footer>
	<% end %>
</div>
