<tr class="nested-fields" id="<%= id %>">
  <td>
    <%= sequence %>
  </td>
  <td>
    <div class="control-group hidden avaliation_recovery_diary_record_recovery_diary_record_students_student_id">
      <div class="controls input">
        <input class="hidden" type="hidden" name="avaliation_recovery_diary_record[recovery_diary_record_attributes][students_attributes][<%= element_id %>][student_id]" id="avaliation_recovery_diary_record_recovery_diary_record_attributes_students_attributes_<%= element_id %>_student_id" value=<%= id %>>
      </div>
    </div>

    <span class="<%= student_situation %>"><%= name %></span>
  </td>

  <td>
    <%= note %>
  </td>

  <td>
    <div class="control-group decimal optional avaliation_recovery_diary_record_recovery_diary_record_students_score">
      <label class="decimal optional control-label hidden" for="avaliation_recovery_diary_record_recovery_diary_record_attributes_students_attributes_<%= element_id %>_score">
        Nota
      </label>
      <div class="controls input">
        <% if(active && !exempted_from_discipline){ %>
          <input class="string decimal form-control decimal form-control decimal optional" type="decimal" name="avaliation_recovery_diary_record[recovery_diary_record_attributes][students_attributes][<%= element_id %>][score]" id="avaliation_recovery_diary_record_recovery_diary_record_attributes_students_attributes_<%= element_id %>_score">
        <% } else { %>
          <input readonly="readonly" class="string decimal form-control decimal form-control decimal optional" type="decimal" name="avaliation_recovery_diary_record[recovery_diary_record_attributes][students_attributes][<%= element_id %>][score]" id="avaliation_recovery_diary_record_recovery_diary_record_attributes_students_attributes_<%= element_id %>_score">
        <% } %>
      </div>
    </div>
  </td>
</tr>
